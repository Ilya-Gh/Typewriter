<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners android:radius="2dip"/>
            <gradient
                android:angle="90"
                android:startColor="#3d000000"
                android:endColor="@android:color/transparent" />
        </shape>
    </item>

    <item
        android:bottom="4px"
        android:left="1px"
        android:right="1px"
        android:top="1px"
        >
        <shape>
            <size
                android:height="12dp"
                android:width="86dp"
                />
            <corners
                android:radius="2dp"
                />
            <solid android:color="@color/carriage_color"/>
        </shape>

    </item>

</layer-list>
